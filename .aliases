if [ `uname` == 'Darwin' ]; then
	export BASEDIR=/Users/mk
elif [ `uname` == 'Linux' ] ; then
	if [[ `uname -v` =~ .*buntu.* ]] ; then
		export BASEDIR=/home/ubuntu
	fi
fi
alias a='		alias'
alias cb='		cd $BASEDIR/bin'
alias cD='		cd $BASEDIR/Documents'
alias cdc='		cd $BASEDIR/c/chef-repo'
alias cde='		cd $BASEDIR/Desktop'
alias cdo='		cd $BASEDIR/Downloads'
alias cg='		cd $BASEDIR/c/git'
alias clr='		clear'
alias cm='		cd $mk0'
alias cm1='		cd $mk1'
alias cm2='		cd $mk2'
alias cm3='		cd $mk3'
alias ctst='	cd $BASEDIR/tst'
alias cu='		cd $BASEDIR/bin/utils'
alias cw='		cd $BASEDIR/servers/chat'
alias cw2='		cd $BASEDIR/chef-repo/kstuff/recipes'
alias cx='		cd -'
alias dd='		ls -ald [^\.]* | grep ^d'
alias dda='		ls -ald \.[^\.]* | grep ^d'
alias h='			history'
alias la='		ls -alrtd .[^\.]* | grep -v ^d'
alias lsl='		ls -lrt'
alias ll='		ls -l'
alias lxd='		ls -al | grep -v ^d'
alias path='	echo $PATH'
alias pg='		ping google.com'
alias sa='		source $BASEDIR/.aliases'
alias sd='		mk0=`pwd`'
alias sd1='		mk1=`pwd`'
alias sd2='		mk2=`pwd`'
alias sd3='		mk3=`pwd`'
alias unp='		chmod 0777'
alias va='		vi $BASEDIR/.aliases'
alias vip='		vi $BASEDIR/.bash_profile'
alias wh='		whoami'
